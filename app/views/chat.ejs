<%- contentFor('title') %>
EspChat

<%- contentFor('content') %>
<style>
    body>.grid {
        height: 100% !important;
    }

    .column {
        max-width: 450px;
    }
</style>
<div class="ui middle aligned center aligned grid">
    <div class="column">
        <img src="/images/logo.png" width="300px" class="image">
        <div class="ui center aligned segment">
            <a class="ui blue image label">
                <img src="/images/user.jpg">
                <span id="author"><%= username %></span>
            </a>
            <a class="ui green circular label"><span class="online"></span></a>

            <div class="ui divider"></div>

            <div class="card text-black bg-secondary mb-3" style="max-width: 40rem;">
                <div class="card-header"><b><i class="comments icon"></i> Mensagens</b></div>
                <div class="card-body text-left messages">
                </div>
            </div>
            <form id="chat">
                <div class="ui input">
                    <input type="text" name="message" placeholder="Digite sua mensagem...">
                </div>
                <button type="submit" class="fluid ui blue button"><i class="paper plane icon"></i> Enviar</button>
            </form>

            <div class="ui divider"></div>

            <div class="alert alert-dismissible alert-info">
                Built with ‚ù§Ô∏è, made by Sampaio Leal. Thanks to Emanuelle S√°
            </div>
            <a href="/" class="ui red button">üíî Sair</a>

        </div>
    </div>
</div>

</div>
<audio style="display: none" class="audios" id="audio" controls preload="none">
    <source src="/notification.mp3" type="audio/mpeg">
</audio>

<%- contentFor('scripts') %>
<script src="/js/chat.js"></script>